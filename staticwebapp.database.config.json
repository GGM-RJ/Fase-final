{
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "options": {
      "database": "VinhoStockDB",
      "container": "stock"
    },
    "connection-string": "@env('COSMOSDB_CONNECTION_STRING')"
  },
  "entities": {
    "StockItem": {
      "source": "stock",
      "permissions": [
        {
          "role": "anonymous",
          "actions": ["*"]
        }
      ]
    },
    "TransferLog": {
      "source": "transfers",
      "permissions": [
        {
          "role": "anonymous",
          "actions": ["*"]
        }
      ]
    },
    "User": {
      "source": "users",
      "permissions": [
        {
          "role": "anonymous",
          "actions": ["*"]
        }
      ]
    }
  }
}